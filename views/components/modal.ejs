<div class="modal fade" id="<%= `${type}${title}` %>Modal" tabindex="-1" aria-labelledby="<%= `${type}${title}` %>ModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="<%= `${type}${title}` %>ModalLabel"><%= type === "add" ? "Add New" : "Edit" %> <%= title %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="<%= `${type}${title}` %>Form" method="POST" action="<%= `${url}${type==='edit'?`/id?_method=PUT`:''}` %>">
                    <% typeof(headers)!=="undefined" && headers.forEach(header => { %>
                        <div class="form-group">
                            <label for="<%= header.title.toLowerCase() %>"><%= header.title %></label>
                            <% if(header.isRequired) {%>
                                <input type="<%= header.type %>" class="form-control" id="<%= header.title.toLowerCase() %>" name="<%= header.title.toLowerCase() %>" value="" required>
                            <% } else {%>
                                <input type="<%= header.type %>" class="form-control" id="<%= header.title.toLowerCase() %>" name="<%= header.title.toLowerCase() %>" value="" >
                            <% } %>
                        </div>
                    <% }) %>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary" form="<%= `${type}${title}` %>Form">Save<%= type !== "add" ? " changes" : "" %></button>
            </div>
        </div>
    </div>
</div>